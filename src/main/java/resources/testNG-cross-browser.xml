<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Cross Browser Test Suite" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="com.automation.listeners.ExtentTestListener"/>
        <listener class-name="com.automation.listeners.RetryListener"/>
    </listeners>

    <!-- Chrome Browser Tests -->
    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/>
        <parameter name="url" value="https://demo5.cybersoft.edu.vn/"/>
        <classes>
            <class name="com.automation.tests.LoginTest"/>
            <class name="com.automation.tests.JobDetailTest"/>
        </classes>
    </test>

    <!-- Firefox Browser Tests -->
    <test name="Firefox Tests">
        <parameter name="browser" value="firefox"/>
        <parameter name="url" value="https://demo5.cybersoft.edu.vn/"/>
        <classes>
            <class name="com.automation.tests.LoginTest"/>
            <class name="com.automation.tests.JobDetailTest"/>
        </classes>
    </test>

    <!-- Edge Browser Tests -->
    <test name="Edge Tests">
        <parameter name="browser" value="edge"/>
        <parameter name="url" value="https://demo5.cybersoft.edu.vn/"/>
        <classes>
            <class name="com.automation.tests.LoginTest"/>
            <class name="com.automation.tests.JobDetailTest"/>
        </classes>
    </test>
</suite>
